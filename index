    <script>
        let tg = window.Telegram.WebApp;
        tg.expand();

        let currentMultiplier = 1.00;
        let isCrashed = false;
        let crashPoint = parseFloat((Math.random() * 5 + 1.1).toFixed(2)); // Рандомная точка краша

        const multiplierDisplay = document.getElementById('multiplier-display');
        const rocketElement = document.getElementById('rocket');
        const playerStarsElement = document.getElementById('player-stars');
        
        let playerStars = 50; // Начальные звезды
        playerStarsElement.innerText = playerStars;

        let animationFrameId;

        function animateRocket(timestamp) {
            if (!animationFrameId) animationFrameId = timestamp;
            const progress = (timestamp - animationFrameId) / 1000; // Прогресс в секундах

            if (currentMultiplier < crashPoint && !isCrashed) {
                currentMultiplier += 0.01 + progress * 0.005; // Увеличиваем множитель и ускоряем
                multiplierDisplay.innerText = `x${currentMultiplier.toFixed(2)}`;

                // Пример анимации ракеты: поднимается и немного смещается
                const rocketY = -progress * 50; // Подъем
                const rocketX = progress * 10; // Смещение
                const scale = 1 + progress * 0.1; // Увеличение
                rocketElement.style.transform = `translate(${rocketX}px, ${rocketY}px) scale(${scale})`;

                requestAnimationFrame(animateRocket);
            } else {
                isCrashed = true;
                multiplierDisplay.innerText = "BOOM!";
                multiplierDisplay.style.color = "red";
                rocketElement.style.transform = `translateY(100px) scale(0.5) rotate(45deg)`; // Эффект падения/разрушения
                rocketElement.style.opacity = '0.3'; // Прозрачность при краше
                cancelAnimationFrame(animationFrameId);
                animationFrameId = null; // Сброс для следующего раунда
            }
        }

        function startGame() {
            currentMultiplier = 1.00;
            isCrashed = false;
            crashPoint = parseFloat((Math.random() * 5 + 1.1).toFixed(2)); // Новый crashPoint
            multiplierDisplay.innerText = "x1.00";
            multiplierDisplay.style.color = "#38bdf8";
            rocketElement.style.transform = `translate(0, 0) scale(1)`;
            rocketElement.style.opacity = '1';

            animationFrameId = requestAnimationFrame(animateRocket);
        }

        function addStars() {
            // Отправляем запрос боту на покупку звезд
            tg.sendData(JSON.stringify({ action: "buy_stars" }));
        }

        function placeBet() {
            if (!isCrashed) {
                // В реальной игре здесь будет логика ставки и возможность забрать
                // Сейчас это просто кнопка-заглушка
                alert("Ваша ставка принята!");
                // Отправляем боту, что игрок сделал ставку
                tg.sendData(JSON.stringify({ action: "place_bet", amount: 10 })); // Пример: ставка 10 звезд
            } else {
                alert("Игра уже закончилась, дождитесь нового раунда!");
                startGame(); // Начать новый раунд после краша
            }
        }

        // Запуск первой игры
        startGame();
    </script>
